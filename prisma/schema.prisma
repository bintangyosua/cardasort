generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EntityCategory {
  id       Int      @id @default(autoincrement())
  name     String   @unique  // contoh: "ACTRESS", "ACTOR", "CARTOON"
  label    String?          // contoh: "Actress", "Actor", "Cartoon" (optional buat display)

  entities Entity[]

  @@index([name])
}

model Entity {
  id         Int             @id @default(autoincrement())
  name       String          @unique
  imageUrl   String?

  // relasi ke category (wajib 1 kategori)
  categoryId Int
  category   EntityCategory  @relation(fields: [categoryId], references: [id])

  // relasi many-to-many ke Tag
  tags       Tag[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([name])
}

model Tag {
  id       Int      @id @default(autoincrement())
  name     String   @unique // "blonde", "cute", "ugly", dst

  entities Entity[]         // many-to-many balik ke Entity

  @@index([name])
}